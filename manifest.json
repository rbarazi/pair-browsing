{
  "manifest_version": 3,
  "name": "Pair Browsing",
  "version": "1.0",
  "description": "AI-powered pair browsing assistant",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Toggle Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "js": ["contentScript.js", "lib/buildDomTree.js"],
    "matches": ["<all_urls>"]
  }],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "sidebar.css",
      "sidebar.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "options_page": "options.html"
}